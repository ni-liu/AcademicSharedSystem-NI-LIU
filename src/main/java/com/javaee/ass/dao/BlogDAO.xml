<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javaee.ass.dao.BlogDAO">
    <resultMap id="blogDOMap" type="blogDO">
        <id property="pkId" column="PK_ID"/>
        <result property="blogTitle" column="BLOG_TITLE"/>
        <result property="userId" column="USER_ID"/>
        <result property="blogContext" column="BLOG_CONTENT"/>
        <result property="fileDownload" column="FILE_DOWNLOAD"/>
        <result property="launchTime" column="LAUNCH_TIME"/>
        <result property="authority" column="AUTHORITY"/>
    </resultMap>



    <select id="searchByBlogTitle" resultMap="blogDOMap" parameterType="String">
        SELECT B.BLOG_TITLE, B.BLOG_CONTENT, B.LAUNCH_TIME, B.FILE_DOWNLOAD
        FROM ASS_BLOG B
        WHERE B.BLOG_TITLE = #{BLOG_TITLE}
    </select>

    <select id="serchByUserName" resultMap="blogDoMap" parameterType="String">

    </select>


</mapper>